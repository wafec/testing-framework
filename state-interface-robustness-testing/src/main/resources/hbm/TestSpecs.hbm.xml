<?xml version="1.0" encoding="UTF-8" ?>

<hibernate-mapping>
    <class name="robtest.stateinterfw.data.TestSpecs" table="TEST_SPECS">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <set name="environments" table="TEST_SPECS_ENVIRONMENT" inverse="false" lazy="true"
             fetch="select" cascade="all">
            <key>
                <column name="test_specs_id" not-null="true" />
            </key>
            <many-to-many entity-name="robtest.stateinterfw.data.Environment">
                <column name="environment_id" not-null="true" />
            </many-to-many>
        </set>
        <set name="messageDevices" table="TEST_SPECS_MESSAGE_DEVICE" inverse="false" lazy="true"
             fetch="select" cascade="all">
            <key>
                <column name="test_specs_id" not-null="true" />
            </key>
            <many-to-many entity-name="robtest.stateinterfw.data.MessageDevice">
                <column name="message_device_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>