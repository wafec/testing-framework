<?xml version="1.0" encoding="UTF-8" ?>

<hibernate-mapping>
    <class name="robtest.stateinterfw.hbm.MessageArgument" table="MESSAGE_ARGUMENT">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="order" type="int" column="order" />
        <property name="name" type="string">
            <column name="name" length="1024" />
        </property>
        <property name="dataType" type="string">
            <column name="data_type" length="255" />
        </property>
        <property name="dataValue" type="clob">
            <column name="data_value" length="15000" />
        </property>
    </class>
</hibernate-mapping>